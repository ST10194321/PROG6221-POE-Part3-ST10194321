<Window x:Class="SanaleRecipeApp.DisplayRecipeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SanaleRecipeApp"
        mc:Ignorable="d"
       Title="Display Recipe" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Name="RecipeNameTextBlock" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center"/>
            <TextBlock Text="Ingredients:" FontWeight="Bold"/>
            <ItemsControl Name="IngredientsItemsControl"/>
            <TextBlock Text="Steps:" FontWeight="Bold"/>
            <ItemsControl Name="StepsItemsControl"/>
            <TextBlock Name="TotalCaloriesTextBlock" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>
