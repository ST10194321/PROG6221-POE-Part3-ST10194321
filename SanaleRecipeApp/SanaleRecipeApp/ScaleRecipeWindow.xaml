<Window x:Class="SanaleRecipeApp.ScaleRecipeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SanaleRecipeApp"
        mc:Ignorable="d"
        Title="Scale Recipe" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Select scale factor:"/>
            <RadioButton Name="HalfScaleRadioButton" Content="0.5" GroupName="ScaleFactor"/>
            <RadioButton Name="DoubleScaleRadioButton" Content="2" GroupName="ScaleFactor"/>
            <RadioButton Name="TripleScaleRadioButton" Content="3" GroupName="ScaleFactor"/>
            <Button Content="Scale Recipe"/>
        </StackPanel>
    </Grid>
</Window>
